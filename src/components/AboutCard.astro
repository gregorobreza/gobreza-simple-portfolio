---
import { getCollection } from "astro:content";
import RenderAbout from "./RenderAbout.astro";

const allAboutSections = await getCollection("about");
---

<div
  class="bg-gradient-to-bl from-dark-secondary rounded-3xl border border-ghost-white/35 w-full p-8 sm:px-12"
>
  <div class="flex flex-col items-center gap-y-6">
    {allAboutSections.map((para) => <RenderAbout about={para} />)}
  </div>
</div>
