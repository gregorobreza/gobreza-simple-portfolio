---
type Props =
  | {
      href: string;
      id?: never;
    }
  | {
      href?: never;
      id: string;
    };
const { href, id } = Astro.props;
const style = `bg-ghost-white text-dark-primary rounded-full px-2 hover:bg-levender-white active:scale-90`;
---
{
  href ? (
    <a href={href} class={style}>
      <slot />
    </a>
  ) : (
    <button id={id} class={style}>
      <slot />
    </button>
  )
}